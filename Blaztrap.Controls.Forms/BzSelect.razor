@namespace Blaztrap.Controls
@typeparam TItem
@inherits BzAsyncControl

<select @onchange="OnSelectionChanged" @attributes="InputAttributes" disabled="@IsLoading">
    @if (IsLoading)
    {
        <option disabled selected value>@(LoadingPlaceholder)</option>
    }
    else
    {
        <option disabled selected value>@(Placeholder)</option>
        @foreach (var item in Items)
        {
            <option value="@(ValueSelector(@item))">@(NameSelector(item))</option>
        }
    }
</select>